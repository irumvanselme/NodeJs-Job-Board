{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "My User Project CRUD",
        "description": "My User Project Application API",
        "license": {
            "name": "Okavaa",
            "url": "https://okavaa.com"
        }
    },
    "host": "localhost:8000",
    "basePath": "/",
    "tags": [
        {
            "name": "app-controller",
            "description": "APIs for the app in the system"
        },
        {
            "name": "users-controller",
            "description": "APIs to handle users in the system"
        },
        {
            "name": "jobs-controller",
            "description": "APIs to handle Jobs in the system"
        }
    ],
    "schemes": ["http", "https"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "paths": {
        "/": {
            "get": {
                "tags": ["app-controller"],
                "summary": "Check the App Status",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "security": [
                {
                    "Bearer": ["global"]
                }
            ]
        },
        "/api/users": {
            "get": {
                "tags": ["users-controller"],
                "summary": "Get All Users in the System",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "Bearer": ["global"]
                    }
                ]
            }
        },
        "/api/jobs": {
            "get": {
                "tags": ["jobs-controller"],
                "summary": "Get All Jobs in the System",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "Bearer": ["global"]
                    }
                ]
            },
            "post": {
                "tags": ["jobs-controller"],
                "summary": "Create a Job in the System",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "Bearer": ["global"]
                    }
                ]
            }
        }
    }
}
